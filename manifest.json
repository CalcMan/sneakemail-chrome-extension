{
  "name": "Sneakemail Filler",
  "version": "0.7.0",
  "description": "One-click Sneakemail address creation, via context menu.",
  "permissions": [
    "contextMenus",
    "tabs", "http://*/", "https://*/"
  ],
  "background": {
    "page": "background.html"
  },
  "page_action": {
    "default_name": "Sneakemail Login Info",
    "default_icon": "icon16.png",
    "default_popup": "login-popup.html"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "64": "icon64.png",
    "128": "icon128.png"
  },
  "manifest_version": 2
}
